{
  "name": "@raulanatol/utilsh-core",
  "version": "1.0.0",
  "description": "Core functionality for utilsh CLI",
  "main": "dist/index.js",
  "bin": {
    "utilsh": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
